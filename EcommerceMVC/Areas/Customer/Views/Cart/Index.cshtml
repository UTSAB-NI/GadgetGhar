<script>
    $(document).ready(function () {
        $(".remove-item").click(function (e) {
            e.preventDefault();
            
            var cartId = $(this).data("cart-id");
            console.log(cartId);
            $.ajax({
                url: "Customer/Cart/Remove", // Replace "ControllerName" with the actual name of your controller
                type: "POST",
                data: { cartId: cartId },
                success: function (response) {
                    if (response.success) {
                        // Optionally, update the UI to reflect the removal of the item
                        // For example, remove the corresponding row from the table
                        $(e.target).closest("tr").remove();
                    } else {
                        alert("Failed to remove item from cart.");
                    }
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                    alert("An error occurred while processing your request.");
                }
           
        });
    });
</script>