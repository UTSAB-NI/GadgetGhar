@model ProductVM

<div class="container">
<form method="post" class="row" enctype="multipart/form-data">
        <input asp-for="Product.Id" hidden />
        <input asp-for="Product.ImageUrl" hidden />
        <div class="border p-5 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">@(Model.Product.Id!=0?"Update":"Create") Product</h2>
            </div>
        
                <div class="mb-3 row p-1">
                <label asp-for="Product.Name" class="p-0"></label>
                <input asp-for="Product.Name" type="text" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                <label asp-for="Product.Description" class="p-0"></label>
                <textarea asp-for="Product.Description" class="form-control"></textarea>

                </div>
                <div class="mb-3 row p-1">
                <label asp-for="Product.Price" class="p-0"></label>
                <input asp-for="Product.Price" type="number" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>

            <div class="mb-3 row p-1">
                <label asp-for="Product.StockQuantity" class="p-0"></label>
                <input asp-for="Product.StockQuantity" type="number" class="form-control" />
                <span asp-validation-for="Product.StockQuantity" class="text-danger"></span>
            </div>

               
                <div class="mb-3 row p-1">
                <label asp-for="Product.CategoryId" class="pr-3"></label>
                <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                        <option selected disabled>Select Category</option>
                    </select>

                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
            <div class="form-floating py-2 col-12">
                <input type="file" name="file" class="form-control border-0 shadow" />

            </div>
            @* <div>
                <label asp-for="Product.ImageUrl"></label>
                <input type="text" asp-for="Product.ImageUrl" />
                <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>

            </div> *@


           <div>
               <img  src="@Model.Product.ImageUrl"/>
           </div>


                <div class="row">
                    <div class="col-6 ">

                    
                            <button type="submit" class="btn btn-primary form-control ">@(Model.Product.Id==0?"Create":"Update")</button>
                        

                    </div>

                    <div class="col-6 ">
                        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Go back to List</a>
                    </div>
                </div>
           
    </div>
   



</form>

</div>

